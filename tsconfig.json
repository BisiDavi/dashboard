{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@json/*": ["json/*"],
            "@layouts/*": ["layouts/*"],
            "@styles/*": ["styles/*"],
            "@hooks/*": ["hooks/*"],
            "@store/*": ["store/*"],
            "@utils/*": ["utils/*"],
            "@api/*": ["axiosInstances/*"],
            "@types/*": ["types/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
